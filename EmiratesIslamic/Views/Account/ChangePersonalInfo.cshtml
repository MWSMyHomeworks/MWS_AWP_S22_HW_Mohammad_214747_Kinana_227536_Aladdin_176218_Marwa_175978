@model ChangePersonalInfoViewModel

@{
	ViewData["title"] = "change personal info";
}

<main class="container">
	<h2>Change personal info</h2>
	<div class="row">
		<form class="col-md-6" asp-controller="Account" asp-action="CHangePersonalInfo" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label asp-for="FullName"></label>
				<input asp-for="FullName" class="form-control"/>
				<span asp-validation-for="FullName"></span>
			</div>
			<div class="form-group">
				<label asp-for="PhoneNumber"></label>
				<input asp-for="PhoneNumber" class="form-control"/>
				<span asp-validation-for="PhoneNumber"></span>
			</div>
			<div class="form-group">
				<label asp-for="Image"></label>
				<input asp-for="Image" type="file" class="form-control" accept=".jpg,.jpeg"/>
				<span asp-validation-for="Image"></span>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<button type="reset" class="btn btn-secondary">Reset</button>
		</form>
		<div class="col-md-6" style="text-align: center;">
			@{
				if (!string.IsNullOrWhiteSpace(Model.ImagePath))
				{
					<p class="h1">Previous Image</p>
					<img src="\@Model.ImagePath" alt="@Model.FullName"/>
				}
			}
		</div>
	</div>
</main>

@section Styles
{
	<style>
		.field-validation-error {
			color: #F00;
		}
	</style>
}

@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
	<script src="/js/customValidators.js" asp-append-version="true"></script>
}
